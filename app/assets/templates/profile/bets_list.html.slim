section#live-wagers data-ng-if="hasOngoingBets"
  header
    h2
      | Live Wagers 
      span.profile-total-number
        | ({{totalPendingBets}})
    / a#live-wagers-show.show-button show / hide
  .well#live-wagers-show-data.hide
    table.table.profile-bets-table
      thead
        tr
          th Match starts at
          th Teams
          th.text-center Wager
          th.text-center Bet type
          th.text-center Status
      tbody
        tr data-ng-repeat="bet in bets | filter:{ status: 'ongoing' } "
          td.bet-date
            | {{bet.links.match.starts_at | date: 'd MMM yy, ha'}}
          td.bet-teams
            | {{bet.links.match.home_team}} {{bet.links.match.home_score}} - {{bet.links.match.away_score}} {{bet.links.match.away_team}}
          td.bet-wager-gain.text-center
            | {{bet.wager}}
          td.text-center
            | {{bet.bet_type}}
          td.text-center
            | {{bet.status}}

