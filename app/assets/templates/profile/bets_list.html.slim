section#wager-history data-ng-if="hasSettledBets"
  header
    h2
      | Wager History 
      span.profile-total-number
        | ({{totalSettledBets}})
    / a#wager-history-show.show-button show / hide
  .well#wager-history-show-data
    table.table.profile-bets-table
      thead
        tr
          th Match date
          th Teams
          th.text-center Wager
          th.text-center Bet type
          th.text-center Win/Loss
          th.text-center Status
      tbody
        tr data-ng-repeat="bet in bets | filter:{ status: 'settled' } "
          td.bet-date
            | {{bet.links.match.starts_at | date: 'd MMM yy'}}
          td.bet-teams
            | {{bet.links.match.home_team}} {{bet.links.match.home_score}} - {{bet.links.match.away_score}} {{bet.links.match.away_team}}
          td.bet-wager-gain.text-center
            | {{bet.wager}}
          td.text-center
            | {{bet.bet_type}}
          td.text-center
            span.bet-wager-gain data-ng-if="bet.is_successful"
              | + {{bet.gain}}
            span.bet-loss data-ng-if="!bet.is_successful"
              | loss
          td.text-center
            | {{bet.status}}
